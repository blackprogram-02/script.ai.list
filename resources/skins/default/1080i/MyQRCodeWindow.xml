        <control type="image">
            <posx>0</posx>
            <posy>-50</posy>
            <width>1100</width>
            <height>780</height>
            <texture border="40">dialogs/default/bg.png</texture> </control>

        <control type="label" id="100">
            <description>Header Label</description>
            <posx>40</posx>
            <posy>40</posy>
            <width>1020</width>
            <height>40</height>
            <font>font13_title</font>
            <label>$INFO[Window.Property(display_title)]</label>
            <textcolor>blue</textcolor> <align>center</align>
        </control>

        <control type="label" id="101">
            <description>URL display Label</description>
            <posx>40</posx>
            <posy>100</posy>
            <width>1020</width>
