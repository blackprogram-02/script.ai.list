            <textcolor>white</textcolor>
            <align>center</align>
        </control>

        <control type="button" id="9000">
            <description>Close Button</description>
            <posx>450</posx> <posy>580</posy>
            <width>200</width>
            <height>60</height>
            <label>Done</label>
            <font>font12_title</font>
            <textcolor>white</textcolor>
            <focusedcolor>blue</focusedcolor>
            <align>center</align>

            <texturenofocus>dialogs/default/button_normal.png</texturenofocus>
            <texturefocus>dialogs/default/button_focus.png</texturefocus>

            <onclick>PreviousMenu</onclick> 
        </control>
    </controls>
